<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .container {
      margin-top: 30px;
    }
    .form-control:focus {
      box-shadow: none;
      border-color: #007bff;
    }
    .btn-primary {
      background-color: #007bff;
      border: none;
    }
    .btn-primary:hover {
      background-color: #0056b3;
    }
    .btn-secondary {
      background-color: #6c757d;
      border: none;
    }
    .btn-secondary:hover {
      background-color: #5a6268;
    }
    .shadow-custom {
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
  </style>
</head>
<body>
  <div class="container">
    <header class="mb-4">
      <h1 class="display-4 text-primary">Admin Dashboard</h1>
      <p class="lead">Today's Date: <span id="currentDate"></span></p>
    </header>

    <!-- Buttons for Navigation -->
    <div class="mb-4">
      <a href="/admin/register" class="btn btn-primary mr-2">Register a New Member</a>
      <a href="/admin/upload" class="btn btn-secondary">Bulk Upload Members</a>
    </div>

    <!-- Unpaid Members List -->
    <section>
      <h2 class="h3 mb-3">Members who have not paid fees this month:</h2>
      <% if (unpaidMembers.length > 0) { %>
        <ul class="list-group">
          <% unpaidMembers.forEach(member => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= member.name %> 
              <span class="badge badge-secondary">Joined on: <%= new Date(member.joinDate).toDateString() %></span>
              <div>
                <button class="btn btn-success btn-sm mark-completed" data-id="<%= member._id %>">Mark as Completed</button>
              </div>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p class="alert alert-info">No members have outstanding fees for this month.</p>
      <% } %>
    </section>
  </div>
  
  <!-- Confirmation Modal -->
  <div class="modal fade" id="confirmationModal" tabindex="-1" role="dialog" aria-labelledby="confirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="confirmationModalLabel">Confirm Action</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Are you sure you want to mark this member as completed?
        </div>
        <div class="modal-footer">
          <form id="confirmForm" method="POST" action="/admin/mark-completed">
            <input type="hidden" name="memberId" id="memberId">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Confirm</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script>
    function updateClock() {
      const now = new Date();
      const options = { year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit', second: '2-digit', hour12: true, timeZone: 'Asia/Kolkata' };
      const formatter = new Intl.DateTimeFormat('en-GB', options);
      const [date, time] = formatter.format(now).split(', ');
      document.getElementById('currentDate').textContent = date;
    }

    // Update the clock immediately and then every second
    updateClock();
    setInterval(updateClock, 1000);

    // Handle mark as completed button click
    document.querySelectorAll('.mark-completed').forEach(button => {
      button.addEventListener('click', function() {
        const memberId = this.getAttribute('data-id');
        document.getElementById('memberId').value = memberId;
        $('#confirmationModal').modal('show');
      });
    });
  </script>
</body>
</html>
