<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .container {
      margin-top: 30px;
    }
    .form-control:focus {
      box-shadow: none;
      border-color: #007bff;
    }
    .btn-primary {
      background-color: #007bff;
      border: none;
    }
    .btn-primary:hover {
      background-color: #0056b3;
    }
    .btn-secondary {
      background-color: #6c757d;
      border: none;
    }
    .btn-secondary:hover {
      background-color: #5a6268;
    }
    .shadow-custom {
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
  </style>
</head>
<body>
  <div class="container">
    <header class="mb-4">
      <h1 class="display-4 text-primary">Admin Dashboard</h1>
      <p class="lead">Today's Date: <span id="currentDate"></span></p>
    </header>

    <!-- Buttons for Navigation -->
    <div class="mb-4">
      <a href="/admin/register" class="btn btn-primary mr-2">Register a New Member</a>
      <a href="/admin/upload" class="btn btn-secondary">Bulk Upload Members</a>
    </div>

    <!-- Unpaid Members List -->
    <section>
      <h2 class="h3 mb-3">Members who have not paid fees:</h2>
      <% if (unpaidMembers.length > 0) { %>
        <ul class="list-group">
          <% unpaidMembers.forEach(member => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= member.name %> 
              <span class="badge badge-secondary">Joined on: <%= member.joinDate.toDateString() %></span>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p class="alert alert-info">No members have outstanding fees.</p>
      <% } %>
    </section>
  </div>
  
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script>
    function updateClock() {
      const now = new Date();
      const options = { year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit', second: '2-digit', hour12: true, timeZone: 'Asia/Kolkata' };
      const formatter = new Intl.DateTimeFormat('en-GB', options);
      const [date, time] = formatter.format(now).split(', ');
      document.getElementById('currentDate').textContent = date;
    }

    // Update the clock immediately and then every second
    updateClock();
    setInterval(updateClock, 1000);
  </script>
</body>
</html>
